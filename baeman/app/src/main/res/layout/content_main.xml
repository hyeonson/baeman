<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
        android:id="@+id/autoViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30">

    </cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/koreanfood"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/koreanfood"/>

            <ImageButton
                android:id="@+id/boonsik"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/boonsik" />

            <ImageButton
                android:id="@+id/donggas"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/donggas" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/chicken"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/chicken" />
            <ImageButton
                android:id="@+id/pizza"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/pizza" />
            <ImageButton
                android:id="@+id/jjajang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/jjajang" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/zokbal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/zokbal" />

            <ImageButton
                android:id="@+id/nightfood"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/nightfood" />
            <ImageButton
                android:id="@+id/zzim"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/zzim" />
        </TableRow>
    </TableLayout>


</LinearLayout>